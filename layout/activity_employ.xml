<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".Employ">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/images">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:orientation="vertical"

            android:layout_alignParentLeft="true">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMPLOYMENT"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Employment has always been a major isue with our country.We at helpie are taking a step forwardto address this problem.We will help you find jobs in your field if its available to us."
                android:textAllCaps="true"
                android:textColor="#F0FFFF"

                android:textStyle="bold"
                />
            <Button
                android:layout_width="250dp"
                android:id="@+id/needtechnical"
                android:layout_height="50dp"
                android:text="Technical/IT Sector"
                android:textStyle="bold"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit"
                android:onClick="needtechnical"
                />
            <Button
                android:layout_width="250dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit"
                android:id="@+id/needaccountancy"
                android:layout_height="50dp"
                android:text="Accountancy/Commerce Sector"
                android:textStyle="bold"
                android:onClick="needaccountancy"
                />

            <Button
                android:layout_width="250dp"
                android:id="@+id/needmba"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit"
                android:layout_height="50dp"
                android:text="HR /Business MANAGement/MBA sector"
                android:textStyle="bold"
                android:onClick="needmba"/>
            <Button
                android:layout_width="250dp"
                android:id="@+id/needwholesell"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit"
                android:layout_height="50dp"
                android:text="Wholesale market"
                android:textStyle="bold"
                android:onClick="needwholesale"
                />
            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:onClick="needpaidlabour"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit"
                android:text="paid labour"
                android:id="@+id/needpaidlabour"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>