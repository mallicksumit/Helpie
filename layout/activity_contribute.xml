<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".Contribute">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:background="@drawable/images"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTRIBUTE"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColorHighlight="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Why do we contribute?"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#7FFFD4"
            android:text="At Helpie,we believe in helping people with everything we can.The only thing that we are focusing right now is how to help the upcoming crisis that we all going to face together."/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Our Duty"
           android:textColor="@color/colorPrimaryDark"
           android:textSize="20dp"
           android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="As a citizen of our country we all have some duty for our nation.We contribute as a Taxpayer,as a Social Worker so why not to the revolution of fulfilling the needs of every individual."
            android:textColor="#7FFFD4"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOW?"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#7FFFD4"
            android:layout_marginTop="10dp"
            android:text="Helpie requests every user to look around their environment and find what is the on ething that goes wasted everyday or most oftenly.We request our users to develop the sense of caring so that we together can build the better future for our ucoming generation.
  Follow the steps to contribute:-" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  i)Look around for resource getting in excess be it food,water,job offers and internship,etc"
            android:textColor="#7FFFD4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ii)Let us know about it we will help you allocate the resource with a promise that it will be used for better future"
            android:textColor="#7FFFD4" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you!!!"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#F0FFFF"
            android:textAlignment="center"/>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>