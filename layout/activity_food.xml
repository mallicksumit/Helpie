<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"

    tools:context=".Food">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/images">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:layout_alignParentLeft="true">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FOOD SERVICES"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sharing is caring and when it comes to food weknow the amount it goes wasted and why not compare the standard of food.Please take a look on the divisions we have!"
                android:textAllCaps="true"
                android:textColor="#F0FFFF"
                android:textStyle="bold"
                />
            <Button
                android:layout_width="250dp"
                android:id="@+id/needpaidorder"
                android:layout_height="50dp"
                android:text="Paid food"
                android:textStyle="bold"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit"
                android:onClick="needpaidfood"
                />
            <Button
                android:layout_width="250dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit"
                android:id="@+id/needfoodforcharity"
                android:layout_height="50dp"
                android:text="Food for Charity"
                android:textStyle="bold"
                android:onClick="needfoodcharity"
                />

            <Button
                android:layout_width="250dp"
                android:id="@+id/needluxury"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit"
                android:layout_height="50dp"
                android:text="Luxury food"
                android:textStyle="bold"
                android:onClick="needluxuryfood"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>