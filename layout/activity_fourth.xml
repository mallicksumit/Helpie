<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".FourthActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical"

        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET STARTED"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="Helpie aims to connect people with same needs,with poeple who share the simalar point of view with sharing and caring.We must thrive together for the survival of our species."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:text="Helpie requests every user to look around their environment and find what is the on ething that goes wasted everyday or most oftenly.We request our users to develop the sense of caring so that we together can build the better future for our ucoming generation.
  Follow the steps to contribute:-" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="  i)Look around for resource getting in excess be it food,water,job offers and internship,etc"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text=" ii)Let us know about it we will help you allocate the resource with a promise that it will be used for better future"
            android:textColor="#FFFFFF" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Helpie!!!To a Better Future"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#7FFFD4"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>